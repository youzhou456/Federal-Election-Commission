    ViewData["Title"] = "Home";
}

    <div class="row featurette">
        <br>
        <img class="featurette-image img-fluid mx-auto" src="~/images/FEC.JPG" alt="Generic placeholder image" width="220" height="220" align="left"/>
        <h2>Federal Election Commission</h2>
        <p class="lead text-muted">The Federal Election Commission (FEC) is the independent regulatory agency to protect the integrity of the federal campaign finance process by providing transparency and fairly enforcing and administering federal campaign finance laws.</p>
        <a class="btn btn-secondary my-2" href="https://www.fec.gov/">Learn more about FEC</a>
    </div>
</br>


<p>
    FEC application lets you fetch data from Federal Election Commission via their public <a href="https://api.open.fec.gov/developers/#/" target="_blank">API</a>.
